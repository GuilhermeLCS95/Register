@model ContactModel
@{
    ViewData["Title"] = "Delete contact";
}
<div class="text-center">
    <h3>Are you sure that you want to delete @Model.Name ?</h3>
</div>
<a class="btn btn-primary w-100" asp-controller="Contact" asp-action="Index" role="button">Cancel</a>
<a class="btn btn-danger w-100" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.Id" role="button">Confirm</a>