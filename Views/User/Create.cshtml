@using Register.Enums;
@model UserModel
@{
    ViewData["Title"] = "Add a new user";
}
<div class="text-center">

    <h1>Register a new user</h1>
</div>
<form asp-controller="User" asp-action="Create" method="post">
    <div class="form-group">
    <label for="name">Name</label>
    <input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
    @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Enter phone number">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="profile">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="0">Selecione</option>
            <option value="@ProfileEnum.Admin">Admin</option>
            <option value="@ProfileEnum.User">User</option>
        </select>        
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter e-mail">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

  <button type="submit" class="btn btn-primary w-100">Submit</button>
  <a class="btn btn-secondary w-100" asp-controller="User" asp-action="Index" role="button">Back to user list</a>
</form>